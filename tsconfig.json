{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./build",
    "module": "es6",
    "target": "es2019",
    "outDir": "./build",
    "removeComments": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}